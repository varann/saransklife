<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			  android:layout_width="match_parent"
			  android:layout_height="wrap_content"
			  android:orientation="vertical"
			  android:paddingLeft="@dimen/offset_bigger"
			  android:paddingRight="@dimen/offset_bigger"
			  android:paddingTop="@dimen/offset_bigger">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:paddingBottom="@dimen/offset_bigger">

		<LinearLayout
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:orientation="vertical">

			<TextView
				android:id="@+id/name"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:ellipsize="end"
				android:singleLine="true"
				android:textSize="@dimen/item_title_size"/>

			<TextView
				android:id="@+id/description"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:ellipsize="end"
				android:maxLines="2"
				android:textSize="@dimen/item_subtitle_size"/>

		</LinearLayout>

		<ImageView
			android:id="@+id/phone"
			android:layout_width="@dimen/category_icon_size"
			android:layout_height="@dimen/category_icon_size"
			android:layout_gravity="center_vertical"
			android:layout_marginLeft="@dimen/offset_big"
			android:src="@drawable/gray_icon_phone"/>

	</LinearLayout>

	<View
		android:layout_width="match_parent"
		android:layout_height="1dp"
		android:background="@color/delimiter"/>

</LinearLayout>