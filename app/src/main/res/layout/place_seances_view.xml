<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			  android:layout_width="match_parent"
			  android:layout_height="wrap_content"
			  android:layout_marginTop="@dimen/offset_bigger"
			  android:orientation="vertical">

	<TextView
		android:id="@+id/name"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:textColor="@color/primary_dark"
		android:textSize="14dp"/>

	<ru.saransklife.client.ui.AwesomeIconTextView_
		android:id="@+id/address"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"/>

	<View
		android:layout_width="match_parent"
		android:layout_height="1dp"
		android:layout_marginBottom="@dimen/offset_normal"
		android:layout_marginTop="@dimen/offset_normal"
		android:background="@color/delimiter"/>

	<GridLayout
		android:id="@+id/seances_grid"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"/>

</LinearLayout>